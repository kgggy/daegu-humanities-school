    //검색
    function searchajax() {
        $("#searchText").keyup(function () {
            var words = $("#searchText").val();
            $.ajax({
                type: 'get',
                url: '/admin/m_company/companySearch?page=1',
                data: {
                    searchText: words
                },
                dataType: 'json',
                success: function (data) {
                    // console.log(ajaxSearch.page)
                    // console.log("===========" + ajaxSearch.ajaxSearch[0].boardName);                     
                    // console.log(page)
                    // console.log(data)
                    var str = ''
                    $(".customPaging").empty();
                    if (data.ajaxSearch.length > 0) {
                        for (var i = (data.page * data.page_num) - data
                                .page_num; i < (data.page * data.page_num); i++) {
                            if (i > data.length) {
                                i++;
                            } else {
                                $("#tbody").empty();
                                str +=
                                    '<tr onclick="location.href=\'/admin/m_company/selectOne?comId=' +
                                    data.ajaxSearch[i].comId + '&page=' + data
                                    .page + '&searchText=' + data.searchText +
                                    '\'"> <td onclick="event.cancelBubble=true;"><input type="checkbox" id="chk" name="chk" value="' +
                                    data.ajaxSearch[i].comId + '" /> </td>';
                                str +=
                                    '<td>' +
                                    (i + 1) + '</td>';
                                str +=
                                    '<td>' +
                                    data.ajaxSearch[i].comNick + '</td>';
                                str +=
                                    '<td>' +
                                    data.ajaxSearch[i].comName + data.ajaxSearch[i]
                                    .comNick + '</td>';
                                str +=
                                    '<td>' +
                                    data.ajaxSearch[i].comPresiName + '</td>'
                                str +=
                                    '<td>' +
                                    data.ajaxSearch[i].comManagerName + '</td>'
                                str +=
                                    '<td>' +
                                    data.ajaxSearch[i].comEmail + '</td></tr>'
                            }
                        }
                        // console.log("str = " + str)
                        $("#tbody").append(str);
                        
                    } else {
                        var none = '<tr> <td colspan="8"> 데이터가 존재하지 않습니다. </td> </tr>'
                        $("#tbody").empty();
                        $("#tbody").append(none);
                    } 
                    paging(data);
                },
                error: function (e) {
                    console.log('error:' + e.status);
                }
            });
        });
    }

</script>

<script language="javaScript">
    function paging(data){
        var datas = data;
        var dataLength = datas.length;
        var dataPageNum = datas.page_num;
        var boardId = datas.ajaxSearch[0].boardId;
        var datasPage = Number(datas.page);
        var datasLast = Number(datas.last);
        var startPage = Number(datas.startPage);
        var endPage = Number(datas.endPage);
        var temp ='';
        temp = `<li>
                <a href="/admin/m_company/page?page=1&searchText=${datas.searchText}"
                class="num">
                << </a> </li> <li>
                <a `
        if(datasPage==1){
            temp += `><</a></li>`;
        }else{
            temp += `href="/admin/m_company/page?page=${datasPage - 1 }&searchText=${datas.searchText}"
                class="num">
                < </a> </li>`
        }
        for(var i = datas.startPage; i < datas.endPage; i++){ 
            temp += `<li class="paging_on">
                    <a href="/admin/m_company/page?page=${i + 1}&searchText=${datas.searchText}"`
            if(i!=0){
                temp += `class="num">${i + 1}</a> </li>`
            }else{
                temp += `class="selected" style="background-color:#FC8B5F;><span style="color:white;">${i + 1}</span></a> </li>`
            }
        }
        temp +=`<li> <a `
        if(datasPage==datasLast){
            temp += `> > </a></li> <li><a href="/admin/m_company/page?page=${datasPage}&searchText=${datas.searchText}"
                    class="num">>></a></li>`
        }else{
            temp += `
                    href="/admin/m_company/page?page=${datasPage + 1}&searchText=${datas.searchText}"
                    class="num">></a></li>
                    <li><a href="/admin/m_company/page?page=${datasLast}&searchText=${datas.searchText}"
                    class="num">>></a></li>
                    `
        }
         $(".customPaging").html(temp);            
    }
