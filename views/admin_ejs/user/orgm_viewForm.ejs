<script type="text/javascript">
   var formObj = $("form[name='udtForm']");
   $(document).ready(function () {
      // 수정 폼 연결
      $("#update_btn").on("click", function () {
         formObj.attr("action", "userUdtForm");
         formObj.attr("method", "get");
         formObj.submit();
      });
      // 삭제
      $("#delete_btn").on("click", function () {
         formObj.attr("action", "oneUserDelete");
         formObj.attr("method", "get");
         if (confirm("회원을 삭제하시겠습니까?") == true) {
            formObj.submit();
         } else {
            return;
         }
      });
   })
   // 레이아웃 adminNav 해당 탭에 접근했을때 펼쳐주기 '[0] = 회원관리'
	var navDropdown = document.getElementsByClassName("nav-dropdown");
		navDropdown[0].className += 'open';
</script>