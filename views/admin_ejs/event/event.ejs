<script>
    const searchForm = $("form[name='searchForm']");
    $(document).ready(function () {
        //검색
        $("#searchAction").on("click", function () {
            searchForm.attr("action", "/admin/m_event");
            searchForm.attr("method", "get");
            searchForm.submit();
        })
    });

    const formObj = $("form[name='eventForm']");
    //등록
    function enroll() {
        formObj.attr("action", "/admin/m_event/eventWritForm");
        formObj.attr("method", "get");
        formObj.submit();
    }

    //쿼리스트링
    function getUrlParams() {
        var params = {};
        window.location.search.replace(/[?&]+([^=&]+)=([^&]*)/gi, function (str, key, value) {
            params[key] = value;
        });
        return params;
    }
    var param = getUrlParams();

    if (param.crewDiv == 'all') {
        var menuItem = document.getElementsByClassName("menu-item");
        menuItem.className = 'menu-item';
        menuItem[6].className += ' open active';
    } else if (param.crewDiv == 'gf') {
        var menuItem = document.getElementsByClassName("menu-item");
        menuItem.className = 'menu-item';
        menuItem[13].className += ' open active';
    } else {
        var menuItem = document.getElementsByClassName("menu-item");
        menuItem.className = 'menu-item';
        menuItem[20].className += ' open active';
    }

    function voteAjax() {
        $("#searchText").keyup(function () {
            var words = $("#searchText").val();
            // console.log(words);
            $.ajax({
                type: 'get',
                url: '/admin/m_event/voteList',
                data: {
                    choose: words,
                    eventId: eventId
                },
                dataType: 'json',
                success: function (data) {
                    var str = ''
                    $(".customPaging").empty();
                    if (data.ajaxSearch.length > 0) {
                        for (var i = (data.page * data.page_num) - data
                                .page_num; i < (data.page * data.page_num); i++) {
                            if (i > data.length) {
                                i++;
                            } else {
                                $("#tbody").empty();
                                str +=
                                    '<tr onclick="location.href=\'/admin/m_gallery/gallerySelectOne?galleryId=' +
                                    data.ajaxSearch[i].galleryId + '&page=' + data
                                    .page + '&searchText=' + data.searchText +
                                    '\'"> <td onclick="event.cancelBubble=true;"><input type="checkbox" id="chk" name="chk" value="' +
                                    data.ajaxSearch[i].galleryId + '" /> </td>';
                                str +=
                                    '<td>' +
                                    (data.ajaxSearch.length - i) + '</td>';
                                str +=
                                    '<td>' +
                                    data.ajaxSearch[i].galleryTitle + '</td>';
                                str +=
                                    '<td>' +
                                    data.ajaxSearch[i].hitCount + '</td>';
                                str +=
                                    '<td>' +
                                    data.ajaxSearch[i].galleryWritDateFmt + '</td>'
                                str += '<td onclick="event.cancelBubble=true;">'
                                if (data.ajaxSearch[i].mcount != 0) {
                                    str +=
                                        '<button id="comment_btn" type="button" class="btn btn-block btn-outline-success"'
                                    str +=
                                        'onclick = "comment(\'/admin/m_comment\',\'\', \'resizable=0,width=640, height=700, scrollbars=1\',\'' +
                                        data.ajaxSearch[i].galleryId + '\')">'
                                    str += '댓글(' + data.ajaxSearch[i].mcount + ')</button></td>'
                                } else {
                                    str += '<td></td>'
                                }
                                str += '</tr>'
                            }
                        }
                        // console.log("str = " + str)
                        $("#tbody").append(str);
                    } else {
                        var none = '<tr> <td colspan="6"> 데이터가 존재하지 않습니다. </td> </tr>'
                        $("#tbody").empty();
                        $("#tbody").append(none);
                    }
                    paging(data);
                },
                error: function (e) {
                    console.log('error:' + e.status);
                }
            });
        });
    }
</script>