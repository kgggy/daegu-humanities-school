<div class="col-xs-6">
    <!-- HTML5 Inputs -->
    <div class="card mb-4">
        <% if(crewDiv == 'all') { %>
        <h5 class="card-header">총동창회 행사 상세</h5>
        <% } else if(crewDiv == 'gf') { %>
        <h5 class="card-header">골프회 행사 상세</h5>
        <% } else { %>
        <h5 class="card-header">산악회 행사 상세</h5>
        <% } %>
        <div class="card-body">
            <form id="eventUdtForm" name="eventUdtForm">
                <input type="hidden" name="page" value="<%=page%>">
                <input type="hidden" name="crewDiv" value="<%=crewDiv%>">
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">행사 번호</label>
                    <div class="col-md-10">
                        <input class="form-control" readonly type="text" value="<%= result[0].eventId %>" id="eventId"
                            name="eventId" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">대표이미지</label>
                    <div class="col-md-10">
                        <% if(result.length > 0 && result[0].eventImg != null && result[0].eventImg != '') {%>
                        <img src="../../../<%=result[0].eventImg%>" style="width:100%">
                        <% }else{ %>
                        등록된 이미지가 없습니다.
                        <% } %>
                        <input type="hidden" value="<%=result[0].eventImg%>" id="eventImg" name="eventImg" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">행사 제목</label>
                    <div class="col-md-10">
                        <input class="form-control" disabled type="text" value="<%= result[0].eventId %>" id="eventTitle"
                            name="eventTitle" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">행사 내용</label>
                    <div class="col-md-10">
                        <input class="form-control" disabled type="text" value="<%- result[0].eventContent %>" id="eventContent"
                            name="eventContent" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">행사 일시</label>
                    <div class="col-md-10">
                        <input class="form-control" disabled id="startDate" type="text" name="eventDate"
                            value="<%= result[0].eventDateFmt %>">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">행사 위치</label>
                    <div class="col-md-10">
                        <input class="form-control" disabled type="text" value="<%= result[0].eventAdres %>" id="eventAdres"
                            name="eventAdres" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">행사 상세 위치</label>
                    <div class="col-md-10">
                        <input class="form-control" disabled type="text" value="<%= result[0].eventAdresDetail %>"
                            id="eventAdresDetail" name="eventAdresDetail" />
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">투표 시작 일자</label>
                    <div class="col-md-10">
                        <input class="form-control" disabled id="voteStartDate" type="text" name="voteStartDate"
                            value="<%= result[0].voteStartDateFmt %>">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">투표 마감 일자</label>
                    <div class="col-md-10">
                        <input class="form-control" disabled id="voteEndDate" type="text" name="voteEndDate"
                            value="<%= result[0].voteEndDateFmt %>">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">투표 대상 1</label>
                    <div class="col-md-10">
                        <select class="dropdown" name="eventTarget1" disabled>
                            <option value="전체" <%if(result[0].eventTarget1=='전체'){%>selected<%}%>>전체</option>
                            <option value="임원" <%if(result[0].eventTarget1=='임원'){%>selected<%}%>>임원</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="html5-text-input" class="col-md-2 col-form-label">투표 대상 2</label>
                    <div class="col-md-10">
                        <select class="dropdown" name="eventTarget2" disabled>
                            <option value="전체" <%if(result[0].eventTarget2=='전체'){%>selected<%}%>>전체</option>
                            <option value="동구" <%if(result[0].eventTarget2=='동구'){%>selected<%}%>>동구</option>
                            <option value="서구" <%if(result[0].eventTarget2=='서구'){%>selected<%}%>>서구</option>
                            <option value="남구" <%if(result[0].eventTarget2=='남구'){%>selected<%}%>>남구</option>
                            <option value="북구" <%if(result[0].eventTarget2=='북구'){%>selected<%}%>>북구</option>
                            <option value="중구" <%if(result[0].eventTarget2=='중구'){%>selected<%}%>>중구</option>
                            <option value="수성구" <%if(result[0].eventTarget2=='수성구'){%>selected<%}%>>수성구</option>
                            <option value="달서구" <%if(result[0].eventTarget2=='달서구'){%>selected<%}%>>달서구</option>
                            <option value="달성구" <%if(result[0].eventTarget2=='달성구'){%>selected<%}%>>달성구</option>
                        </select>
                    </div>
                </div>
