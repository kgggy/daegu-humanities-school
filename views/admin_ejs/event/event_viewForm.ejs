                <div class="demo-inline-spacing">
                    <button type="button" class="btn btn-primary" id="update_btn">수정</button>
                    <button type="button" class="btn btn-danger" id="delete_btn">삭제</button>
                    <button type="button" class="btn btn-dark"
                        onclick="location.href='/admin/m_event?page=<%=page%>&crewDiv=<%=crewDiv%><%=keepSearch%>'">목록</button>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript">
        var formObj = $("form[name='eventUdtForm']");
        $(document).ready(function () {
            // 수정 폼 연결
            $("#update_btn").on("click", function () {
                formObj.attr("action", "/admin/m_event/eventUdtForm");
                formObj.attr("method", "post");
                formObj.submit();
            });
            // 삭제
            $("#delete_btn").on("click", function () {
                formObj.attr("action", "/admin/userDelete/one");
                formObj.attr("method", "get");
                if (confirm("회원을 삭제하시겠습니까?") == true) {
                    formObj.submit();
                } else {
                    return;
                }
            });
        })
    </script>