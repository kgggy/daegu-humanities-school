<script>
    const formObj = $("form[name='eventForm']");
    //등록 
    function enroll() {
        formObj.attr("method", "get");
        formObj.attr("action", "/admin/m_event/eventWritForm");
        formObj.submit();
    }
    // 삭제
    $("#delete_btn").on("click", function () {
        var chkArr = [];
        $("input[name=chk]:checked").each(function () {
            chkArr.push($(this).val());
        });
        $('#eventId').val(chkArr);
        if (chkArr == "") {
            alert("삭제할 목록을 선택해주세요.");
            return false;
        }
        var chkImg = [];
        $("input[name=chk]:checked").each(function () {
            chkImg.push($(this).attr('data-img'));
        });
        $('#eventFileRoute').val(chkImg);
        formObj.attr("action", "/admin/m_event/eventsDelete");
        formObj.attr("method", "get");
        if (confirm("삭제하시겠습니까?") == true) {
            formObj.submit();
        } else {
            return false;
        }
    })

    //체크박스
    $("#chkAll").click(function () {
        if ($("#chkAll").is(":checked"))
            $("input[name=chk]").prop("checked", true);
        else
            $("input[name=chk]").prop("checked", false);
    });
    $("input[name=chk]").click(function () {
        var total = $("input[name=chk]").length;
        var checked = $("input[name=chk]:checked").length;
        if (total != checked)
            $("#chkAll").prop("checked", false);
        else
            $("#chkAll").prop("checked", true);
    });

    //명단 확인
    function voteList(theURL, winName, features, choose, eventId) {
        theURL += '?choose=' + choose + '&eventId=' + eventId;
        window.open(theURL, winName, features);
    }

    //네비바
    function getUrlParams() {
        var params = {};
        window.location.search.replace(/[?&]+([^=&]+)=([^&]*)/gi, function (str, key, value) {
            params[key] = value;
        });
        return params;
    }
    var param = getUrlParams();
    if (param.crewDiv == 'all') {
        var menuItem = document.getElementsByClassName("menu-item");
        menuItem.className = 'menu-item';
        menuItem[6].className += ' open active';
        menuItem[8].className += ' active';
    } else if (param.crewDiv == 'gf') {
        var menuItem = document.getElementsByClassName("menu-item");
        menuItem.className = 'menu-item';
        menuItem[14].className += ' open active';
        menuItem[16].className += ' active';
    } else {
        var menuItem = document.getElementsByClassName("menu-item");
        menuItem.className = 'menu-item';
        menuItem[22].className += ' open active';
        menuItem[24].className += ' active';
    }
</script>